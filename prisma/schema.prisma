generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  relationModel         = true
  modelCase             = "camelCase"
  modelSuffix           = "Schema"
  useDecimalJs          = true
  prismaJsonNullability = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Locale {
  en
  fa
  da
}

model Account {
  id                   String         @id @default(uuid()) @map("id")
  userId               String         @map("user_id")
  type                 String         @default("oauth") @map("type")
  providerId           String         @map("provider")
  accountId            String         @map("provider_account_id")
  refreshToken         String?        @map("refresh_token")
  accessToken          String?        @map("access_token")
  accessTokenExpiresAt DateTime?      @map("expires_at")
  tokenType            String?        @map("token_type")
  scope                String?
  idToken              String?        @map("id_token")
  sessionState         String?        @map("session_state")
  notifications        Notification[]
  user                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt            DateTime       @default(now()) @map("created_at")
  updatedAt            DateTime       @updatedAt @map("updated_at")

  @@unique([providerId, accountId])
  @@map("accounts")
}

model User {
  id            String        @id @default(uuid()) @map("id")
  name          String?
  email         String?       @unique
  emailVerified Boolean       @default(false) @map("email_verified")
  image         String?
  accounts      Account[]
  cards         Card[]
  collections   Collection[]
  boxes         Box[]
  sessions      Session[]
  outs          String[]
  locale        Locale?       @default(en)
  subscription  Subscription?
  collection    String?
  box           String?
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  @@map("users")
}

model Notification {
  id        String   @id @default(uuid()) @map("id")
  accountId String   @map("account_id")
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  content   String
  locale    Locale?  @default(en)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("notifications")
}

model Session {
  id        String   @id @default(uuid()) @map("id")
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model Collection {
  id        String   @id @default(uuid()) @map("id")
  userId    String   @map("user_id")
  name      String
  desc      String?
  price     Float?   @default(0)
  slug      String?
  tags      String[] @default([])
  cards     Card[]
  locale    Locale?  @default(en)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("collections")
}

model Box {
  id        String    @id @default(uuid()) @map("id")
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sections  Section[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("boxes")
}

model Section {
  id        String      @id @default(uuid()) @map("id")
  boxId     String      @map("box_id")
  box       Box         @relation(fields: [boxId], references: [id], onDelete: Cascade)
  parts     Part[]
  type      SectionType
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  @@map("sections")
}

enum SectionType {
  one
  two
  three
  four
  five
}

model Part {
  id        String   @id @default(uuid()) @map("id")
  sectionId String   @map("section_id")
  section   Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  cards     Card[]
  reviewAt  DateTime @map("review_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("parts")
}

model Card {
  id           String     @id @default(uuid()) @map("id")
  userId       String     @map("user_id")
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  collectionId String     @map("collection_id")
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  partId       String?    @map("part_id")
  part         Part?      @relation(fields: [partId], references: [id], onDelete: Cascade)
  boxId        String?    @map("box_id")
  sectionId    String?    @map("section_id")
  front        String
  back         String
  history      History[]
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  @@map("cards")
}

model History {
  id        String       @id @default(uuid()) @map("id")
  cardId    String       @map("card_id")
  card      Card         @relation(fields: [cardId], references: [id], onDelete: Cascade)
  date      DateTime     @default(now())
  section   SectionType?
  status    Boolean
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  @@map("history")
}

model Verification {
  id         String   @id @default(uuid()) @map("id")
  identifier String
  value      String   @map("token")
  expiresAt  DateTime @map("expires")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([identifier, value])
  @@map("tokens")
}

model Subscription {
  id                     String    @id @default(uuid()) @map("id")
  userId                 String    @unique @map("user_id")
  user                   User      @relation(fields: [userId], references: [id])
  stripeCustomerId       String    @unique @map("stripe_customer_id")
  stripeSubscriptionId   String?   @map("stripe_subscription_id")
  stripePriceId          String?   @map("stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map("stripe_current_period_end")

  @@map("subscriptions")
}
